@page "/counter"

<PageHeading>Counter</PageHeading>

<BodyText>Current count: @currentCount</BodyText>

<Inline>
    <ClickButton ClickHandler=@(new EventCallback<MouseEventArgs>(receiver: null, IncrementCount)) Text="Click me"/>
</Inline>

@code {
    private int currentCount = 0;

    private void IncrementCount(MouseEventArgs e)
    {
        currentCount++;
    }
}
