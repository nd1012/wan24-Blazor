@inherits Clickable
@implements IClickButtonParametersExt

@if (IsVisible)
{
    <SectionContent SectionName=@UseBoxSection>
        @if ((!IsActive && ShowIcon) || (IsActive && ShowActiveIcon))
        {
            <Image @attributes=@(IsActive && HasActiveIcon&&ShowActiveIcon?AllActiveIconParameters??AllIconParameters:AllIconParameters)/>
        }
        @if (!string.IsNullOrEmpty(Text) && (ShowText || ((!IsActive && !ShowIcon) || (IsActive && !ShowActiveIcon))))
        {
            <Box @attributes=@AllTextParameters>
                @Text
            </Box>
        }
        @ChildContent
    </SectionContent>
    base.BuildRenderTree(__builder);
}
