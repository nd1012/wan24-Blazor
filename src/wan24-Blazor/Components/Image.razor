@inherits Box
@implements IImageParametersExt

@if (IsVisible)
{
    @if (UseBoxSection is not null)
    {
        <SectionContent SectionName=@UseBoxSection>
            @if (UseImageSection is not null)// Inheriting component will render
            {
                <SectionOutlet SectionName=@UseImageSection />
            }
            else if (RenderSvg)// SVG is being rendered
            {
                @((MarkupString)SvgXml!)
            }
            else if (ChildContent is not null)// Child content is rendering!?
            {
                @ChildContent
            }
        </SectionContent>
    }
    base.BuildRenderTree(__builder);
}
